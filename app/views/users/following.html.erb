<div class="col-sm-9">
  <div class="row">
    <% for followee in @user.following %>
      <div class="col-lg-4 col-md-6 col-12">
        <div class="card user-card">
          <div class="card-inner">
            <div class="image-wrapper">
              <%= image_tag "warbler-hero", class: "card-hero" %>
            </div>
            <div class="card-contents">
              <%= link_to user_path(followee.id), class: "card-link" do %>
                <%= image_tag followee.image_url, class: "card-image" %>
                <p>@<%= followee.username %></p>
              <% end %>
              <%= render "shared/follow_buttons", other_user: followee %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
